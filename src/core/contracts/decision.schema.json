{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "type": "object",
  "required": ["id", "taskId", "category", "proposals", "selectedOption", "rationale"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^decision-[a-z0-9-]{36}$"
    },
    "taskId": {
      "type": "string",
      "pattern": "^task-[a-z0-9-]{36}$"
    },
    "planId": {
      "type": ["string", "null"],
      "pattern": "^plan-[a-z0-9-]{36}$"
    },
    "category": {
      "type": "string",
      "enum": ["architecture", "ux", "performance", "security", "integration"]
    },
    "proposals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["approach", "reasoning", "tradeoffs"],
        "properties": {
          "approach": { "type": "string" },
          "reasoning": { "type": "string" },
          "tradeoffs": {
            "type": "object",
            "required": ["pros", "cons", "risks"],
            "properties": {
              "pros": { "type": "array", "items": { "type": "string" } },
              "cons": { "type": "array", "items": { "type": "string" } },
              "risks": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },
    "selectedOption": {
      "type": "number",
      "minimum": 0
    },
    "rationale": {
      "type": "string",
      "minLength": 10
    },
    "overrides": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
